<!DOCTYPE html>
<html>
  <head>
    <title>TelePoem</title>
    <!-- <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %> -->
    <%= stylesheet_link_tag '/style.css' %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class='navbar'>
      <div>
        <%= link_to "Home", root_path %>
      </div>

      <div>
        <% if current_user %>
        <%= link_to "Sign out", signout_path, id: "sign_out" %>
        <br>
          Signed in as <strong><%= current_user.name %></strong>
        <% else %>
          <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %>
        <% end %>
      </div>

      <div>
      <% if current_user %>
        <%= link_to "Profile", users_path(:user_id => current_user.id) %>
      <% end %>
      </div>

      <div>
        <p>Contribute</p>
      </div>

      <br>

      <div>
        <%= link_to "Jokes", categories_path(:category_id => 2) %>
      </div>

      <div>
        <%= link_to "Poems", categories_path(:category_id => 1) %>
      </div>

      <div>
        <%= link_to "Short Stories", categories_path(:category_id => 3) %>
      </div>
    </nav>


    <div>
    <%= yield %>
    </div>
  </body>
</html>
